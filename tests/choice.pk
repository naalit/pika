eff Choice of
    Choose () : Bool

# Poor man's `use`
let Choose = Choice.Choose

fun nondet () : I32 with Choice = do
    let a : I32 = if Choose () then 2 else 3
    let b : I32 = if Choose () then 12 else 0
    if Choose () then a + b else 0

fun sum_all (f : () -> I32 with Choice) : I32 = catch f () of
    i => i
    eff (Choose ()) k => k True + k False

fun main () with IO = do
    print (sum_all nondet)
