type Term a of
  # Type stated
  TypeType : Term Type
  # Normal ADT
  Lit a
  # Mixed before and after colon
  Fun [a b] : (a -> b) -> Term (a -> b)
where
  # The constructors work without a dot here
  fun also_lit [a] (x : a) : Term a = Lit x

let one : Term Type = Term.TypeType
let two : Term (Type -> Type) = Term.Fun (x => x)
# Make sure the associated namespace works
let three : Term Type = Term.also_lit Type
