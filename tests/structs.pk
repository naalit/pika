val Vec3 = sig
    val x : I32
    val y : I32
    val z : I32
end

val up : Vec3 = struct
    val x = 0
    val y = 1
    val z = 0
end

# A test of dependent records i.e. sigma types
val Any = sig
    val T : Type
    val x : T
end
val three : Any = struct
    val T = I32
    val x = 3
end

fun print_vec3 (v : Vec3) with IO = do
    puts "{\n\t"
    print (v.x)
    puts "\t"
    print (v.y)
    puts "\t"
    print (v.z)
    puts "}\n"
end

fun main () with IO = print_vec3 up